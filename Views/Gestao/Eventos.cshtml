@model IEnumerable<LivePass.Models.Evento>
@{
    Layout = "_LayoutAdmin";
}

<div class="text-center">
    <h2>Todos Eventos</h2>
</div>
<a asp-action="NovoEvento" asp-controller="Gestao" class="btn btn-success">Novo Evento</a>

<hr>

<script>
    $(document).ready( function () {
        $('#eventos').DataTable();
    });
</script>

@foreach(var evento in Model);

<table id="eventos" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>Capacidade</th>
            <th>Data</th>
            <th>Valor</th>
            <th>CasaShow</th>
            <th>Categoria</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var evento in Model){
            <tr>
                <td>@evento.Id</td>
                <td>@evento.Nome</td>
                <td>@evento.Capacidade</td>
                <td>@evento.Data</td>
                <td>@evento.Valor</td>
                <td>@evento.CasaShow</td>
                <td>@evento.Categoria</td>

                <td><a class="btn btn-primary" href="/Gestao/EditarEvento/@evento.Id">Editar</a> 

                <form asp-action="Deletar" asp-controller="Evento" style="display: inline;">
                    <input type="hidden" name="Id" id="Id" value="@evento.Id">
                    <button class="btn btn-danger">Deletar</button>
                </form>
                </td>                                
            </tr>
        }
    </tbody>
</table>

